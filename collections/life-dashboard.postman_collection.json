{
  "info": {
    "name": "Life Dashboard API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Daily Metrics",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer <access_token>" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/daily/2024-06-30",
          "host": ["{{baseUrl}}"],
          "path": ["api", "daily", "2024-06-30"]
        }
      }
    },
    {
      "name": "Create Nutrition Entry",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer <access_token>" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"timestamp\": \"2024-06-30T12:00:00Z\",\n  \"foodName\": \"Overnight oats\",\n  \"mealType\": \"breakfast\",\n  \"calories\": 420,\n  \"protein_g\": 25\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/nutrition",
          "host": ["{{baseUrl}}"],
          "path": ["api", "nutrition"]
        }
      }
    },
    {
      "name": "Generate LLM insight",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer <access_token>" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"topic\": \"weekly\",\n  \"range\": {\n    \"from\": \"2024-06-24\",\n    \"to\": \"2024-06-30\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/llm/insights",
          "host": ["{{baseUrl}}"],
          "path": ["api", "llm", "insights"]
        }
      }
    }
  ],
  "event": []
}
