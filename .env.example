###########################################
# Supabase
# - NEXT_PUBLIC_SUPABASE_URL is safe for client usage
# - SUPABASE_ANON_KEY is the public anon key (do NOT prefix with NEXT_PUBLIC_ anymore)
# - SUPABASE_SERVICE_ROLE_KEY is secret, use only on the server / Cloud Run jobs
###########################################
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="supabase-service-role-key"

###########################################
# Database (optional direct Postgres access)
# Provide only if Cloud Run jobs or Prisma need direct connection string
###########################################
SUPABASE_DB_URL="postgresql://user:pass@host:5432/postgres"

###########################################
# Stripe
# PUBLIC key is safe for the browser, others must stay server-side
###########################################
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PRO_PRODUCT_ID="prod_..."
STRIPE_PRICE_PRO_MONTH_ID="price_monthly_..."
STRIPE_PRICE_PRO_YEAR_ID="price_yearly_..."

###########################################
# Garmin Integration
###########################################
GARMIN_CLIENT_ID=""
GARMIN_CLIENT_SECRET=""
GARMIN_WEBHOOK_SECRET=""

###########################################
# Withings Integration
###########################################
WITHINGS_CLIENT_ID=""
WITHINGS_CLIENT_SECRET=""
WITHINGS_WEBHOOK_SECRET=""

###########################################
# Vertex AI (Gemini via Vertex)
# - Use ADC on Cloud Run; GOOGLE_APPLICATION_CREDENTIALS only for local dev
###########################################
GCP_PROJECT_ID="your-gcp-project-id"
GCP_LOCATION="us-central1"
VERTEX_MODEL="gemini-1.5-pro"
GOOGLE_APPLICATION_CREDENTIALS="/absolute/path/to/service-account.json"

###########################################
# Google Cloud Storage
###########################################
GCS_BUCKET_RAW="health-raw-your-suffix"

###########################################
# Application
###########################################
NEXT_PUBLIC_APP_URL="http://localhost:3000"
APP_TIMEZONE="America/New_York"
LLM_SERVICE_URL="https://llm-service-example.a.run.app"
JOBS_SERVICE_URL="https://jobs-service-example.a.run.app"
NEXT_PUBLIC_FREE_INSIGHTS_LIMIT=5
LLM_SERVICE_URL="https://llm-service-example.a.run.app"
LLM_RATE_LIMIT_PER_MINUTE=5
LLM_RATE_LIMIT_WINDOW_MS=60000
