POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=life_dashboard
POSTGRES_USER=life_admin
POSTGRES_PASSWORD=life_password
DATABASE_URL=postgresql+asyncpg://life_admin:life_password@life_db:5432/life_dashboard
DATABASE_URL_HOST=postgresql+asyncpg://life_admin:life_password@localhost:5432/life_dashboard

